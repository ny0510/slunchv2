<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/widget_timetable_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시간표"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#181818"
            android:gravity="start" />

        <TextView
            android:id="@+id/widget_timetable_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="12sp"
            android:textColor="#7956FC"
            android:textStyle="bold"
            android:gravity="end" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 주간 시간표 테이블 -->
        <LinearLayout
            android:id="@+id/widget_timetable_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 요일 헤더 -->
            <LinearLayout
                android:id="@+id/widget_timetable_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/header_mon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="월"
                    android:textSize="11sp"
                    android:textColor="#181818"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/header_tue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="화"
                    android:textSize="11sp"
                    android:textColor="#181818"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/header_wed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수"
                    android:textSize="11sp"
                    android:textColor="#181818"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/header_thu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="목"
                    android:textSize="11sp"
                    android:textColor="#181818"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/header_fri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="금"
                    android:textSize="11sp"
                    android:textColor="#181818"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 시간표 행들 (동적으로 추가) -->
            <LinearLayout
                android:id="@+id/widget_timetable_rows"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_timetable_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="시간표 정보가 없습니다."
            android:textColor="#181818"
            android:textSize="13sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/widget_timetable_loading"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="#7956FC"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
